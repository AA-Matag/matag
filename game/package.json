{
  "name": "mtg-game",
  "version": "1.0.0",
  "description": "mtg game ui",
  "private": true,
  "scripts": {
    "build-dev": "webpack -d",
    "build-prod": "webpack -p",
    "lint": "eslint src/main/resources/app/src/ --ext .js --ignore-pattern node_modules/",
    "lint-fix": "eslint src/main/resources/app/src/ --ext .js --fix",
    "postinstall": "yarn build-prod",
    "test": "jest",
    "watch": "webpack -d --watch",
    "watch-htmlunit": "webpack -p --watch"
  },
  "author": "Antonio Alonzi",
  "license": "MIT",
  "dependencies": {
    "@stomp/stompjs": "^5.2.0",
    "lodash": "^4.17.14",
    "prop-types": "^15.7.2",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "sockjs-client": "^1.3.0"

  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "eslint": "^5.16.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.8.0",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/test/resources/app/src"
    ],
    "moduleNameMapper": {
      "^Main/(.*)$": "<rootDir>/src/main/resources/app/src/$1"
    }
  }
}
